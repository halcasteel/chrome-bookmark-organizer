# Backend Environment Variables
NODE_ENV=production
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/bookmark_manager
# For Cloud SQL: postgresql://username:password@localhost:5432/bookmark_manager?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME

# Authentication
JWT_SECRET=your-secure-jwt-secret-here

# CORS Configuration
CORS_ORIGIN=https://bookmarks.az1.ai
FRONTEND_URL=https://bookmarks.az1.ai

# OpenAI Configuration (optional - for embeddings)
OPENAI_API_KEY=your-openai-api-key

# Google Cloud Storage (for file uploads)
GCS_BUCKET_NAME=your-project-id-bookmarks

# File Import Configuration
BOOKMARK_IMPORT_DIR=/app/imports
DEFAULT_USER_ID=1

# Frontend Environment Variables
VITE_API_URL=https://your-backend-url.a.run.app/api

# Docker Compose Variables
BUILD_TARGET=production
LOCAL_IMPORT_DIR=./imports

# GCP Deployment Variables (for deploy.sh)
PROJECT_ID=your-gcp-project-id
REGION=us-central1
CLOUD_SQL_INSTANCE=bookmark-manager-db
DATABASE_NAME=bookmark_manager
DATABASE_USER=admin
DATABASE_PASSWORD=your-secure-db-password
DOMAIN=bookmarks.az1.ai