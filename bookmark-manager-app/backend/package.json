  "devDependencies": {
    "nodemon": "^3.1.9",
    "jest": "^30.0.0",
    "@types/node": "^24.0.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.2",
    "prettier": "^3.4.2"
